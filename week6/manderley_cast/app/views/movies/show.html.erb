<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Year:</strong>
  <%= @movie.year %>
</p>

<p>
  <strong>Duration:</strong>
  <%= @movie.duration %>
</p>

<p>
  <strong>Synopsis:</strong>
  <%= @movie.synopsis %>
</p>

<p>

  <% if @movie.people.empty? %>
  <strong> No people in here</strong>
  <% else %>
    <strong>People:</strong>
    <ul>
      <% @movie.casts.each do |c| %>
        <li>
          <% if c.person %>
            <%= c.person.complete_name %> (<%= c.role.titleize %>)

            <div id="voting_cast_system">
            <%= link_to "I like it!", person_thumbs_up_path(c.person.id) %>
            |
            <%= link_to "Too old for me.", person_thumbs_down_path(c.person.id) %>
            </div>

                <% if @movie.votes.present? %>
                  <div id="votes">
                    <p>
                      <%= c.person.vote_cast.dislikes.size %> out of <%= c.person.vote_cast.size %>
                      think this person is old.
                    </p>
                  </div>
                <% end %>


          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
</p>

<% if policy(Vote.new).create? %>
<div id="voting_system">
  <%= link_to "I like it!", movie_thumbs_up_path(@movie) %>
  |
  <%= link_to "I didnt like it!", movie_thumbs_down_path(@movie) %>
</div>
<% end %>

<% if @movie.votes.present? %>
  <div id="votes">
  <p>
    <%= @movie.likes.size %> out of <%= @movie.votes.size %>
   people liked this film.
   </p>

     <p>
    <%= @movie.dislikes.size %> out of <%= @movie.votes.size %>
    people didnt liked this film.
   </p>
  </div>
<% end %>



<h4>Comments</h4>
<%= render @movie.comments %>

<% if policy(@movie.comments.build).create? %>
<div>
  <button id='comment_form_button'>Show Form</button>
  <div id='comment_form'>
    <h4>Add a comment:</h4>
    <%= render 'comments/form' %>  
  </div>
</div>
<% end %>



<%= link_to 'Add cast', movie_new_cast_path(@movie) %> |
<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>

